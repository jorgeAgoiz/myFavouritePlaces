<%- include('includes/head.ejs') %>
<div class="container-fluid">
  <%- include('includes/navbar.ejs') %> <% collects.forEach( coll => { %>
  <div class="row align-items-center justify-content-center">
    <div
      class="col-12 col-sm-10 col-md-8 text-center mt-4 mb-4 pt-3 pb-3 collectCard"
    >
      <div class="row align-items-center justify-content-center">
        <div class="col-12 pt-1 pb-1 mt-1 mb-1">
          <h1><%= coll.title %></h1>
        </div>
        <div class="col-12 pt-1 pb-1 mt-1 mb-1">
          <h2><%= coll.description %></h2>
        </div>
        <div class="col-4">
          <form action="/viewPlaces" method="POST">
            <input type="hidden" name="collectId" value="<%= coll._id %>" />
            <input type="hidden" name="userId" value="<%= userId %>" />
            <button class="btn btnStyleThree" type="submit">
              View <br />
              Places
            </button>
          </form>
        </div>
        <div class="col-4">
          <form action="/addplaces" method="POST">
            <input type="hidden" name="collectId" value="<%= coll._id %>" />
            <input type="hidden" name="userId" value="<%= userId %>" />
            <button class="btn btnStyleThree" type="submit">
              Add <br />
              Places
            </button>
          </form>
        </div>
        <div class="col-4">
          <form action="" method="post">
            <button class="btn btnStyleThree" type="submit">
              Delete <br />
              Collection
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include('includes/end.ejs') %>
